inteiro a, b, soma

		escreva("Informe o primeiro número:")
		leia(a)
		escreva("\nInforme o segundo número:")
		leia(b)

		soma = a + b

		se (soma > 10){
		escreva("O quadrado da soma é:", (soma * soma))
		}se ((soma * soma) > 30){
		escreva("\nÉ maior que 30")
		}senao{
			escreva("Resultado incompatível")
		}
