logico verdadeiro 
		logico p1, p2, p3, p4, p5
		

		escreva("O seu animal tem chifre?")
		leia(p1)
		escreva("O seu animal tem asas?")
		leia(p2)
		escreva("O seu animal late?")
		leia(p3)
		escreva("O seu animal mia?")
		leia(p4)
		escreva("O seu animal nada?")
		leia(p5)

		se (p1 == verdadeiro){
			escreva("O seu animal é um boi")
		}senao se (p2 == verdadeiro){
			escreva("O seu animal é uma borboleta")
		}senao se (p3 == verdadeiro){
			escreva("O seu animal é um cachorro")
		}senao se (p4 == verdadeiro){
		escreva("O seu animal é um gato")
		}senao se (p5 == verdadeiro){
		escreva("O seu animal é uma beleia")
		}senao{
			escreva("Animal não identificado!")
			
		
				
