inteiro x, y, z 

		escreva("Informe o valor de x:")
		leia(x)
		escreva("\nInforme o valor de y:")
		leia(y)
		escreva("\nInforme o valor de z:")
		leia(z)

		se ((x < y+z) e (y < x+z) e (z < x+y)){
		escreva ("Esses lados formam um triângulo")
		}senao{ 
			escreva("Esses lados não formam um triângulo!")
      }
			
